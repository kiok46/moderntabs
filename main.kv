

<Container>:
	ct: ct
	ibl: ibl
	IconBarLeft:
		id: ibl
	Splitter:
		sizable_from: 'left'
		Ctabs:
			id: ct
			
<Ctabs>:
	orientation: "vertical"
	canvas:
		Color:
			rgba: .9,.9,.9,1
		Rectangle:
			size: self.size
			pos: self.pos
	Label:
		markup: True
		bold: True
		font_size: 32
		text:"[color=f0000]Workspace[/color]"
	
<Tab1>:
	Splitter:
		sizable_from: 'top'
		canvas.before:
			Color:
				rgba: .1,.3,.3,1
			Rectangle:
				size: self.size
				pos: self.pos
		BoxLayout:
			#orientation: "vertical"
			padding: 5
			spacing: 10
			TabbedPanel:
				do_default_tab: False
				#tab_pos: "bottom_right"
				TabbedPanelItem:
					text: "Kivy console"
					font_size: 13
					RstDocument:
						text: "Kivy console"
				TabbedPanelItem:
					text: "Python console"
					font_size: 13
				TabbedPanelItem:
					text: "Error console"
					font_size: 13
				
			BoxLayout:
				size_hint: .2,1
				spacing: 4
				Icons:
					size_hint:(None,None)
					size: 25,25
					source: "./icons/minimize-49.png"
					on_release: root.parent.remove_widget(root)
					on_press: root.Expanded_tab(self)
				Icons:
					size_hint:(None,None)
					size: 25,25
					source: "./icons/maximize-49.png"
					on_release: root.parent.remove_widget(root)
					on_press: root.Expanded_tab(self)

<Tab2>:
	Button:
		text: "Tab2"

<Tab3>:
	Button:
		text: "Tab3"
	
<IconBarLeft>:
	size_hint: .1,1
	orientation: "vertical"
	padding: 5
	spacing: 5
	canvas:
		Color:
			rgba: .2,.2,.2,1
		Rectangle:
			size: self.size
			pos: self.pos
	Icons:
		id: i_for_tab1
		source: "./icons/error.png"
		on_release: root.Add_Tab1()
	Icons:
		source: "./icons/info.png"

<Icons>:
	size_hint: None,None
	size: 50,50